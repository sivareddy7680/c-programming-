1)student information in structure

#include <stdio.h>
#include <string.h>
struct student
{
	char name[50];
	int rollno;
	int marks;
};
int main()
{
	struct student s;
	printf("enter the information of students:\n\n");
	printf("enter name:");
	scanf("%s",s.name);
	
	printf("enter rollno:");
	scanf("%d",&s.rollno);
	
	printf("enter marks:");
	scanf("%d",&s.marks);
	
	printf("\ndisplaying information\n");
	
	printf("name:%s\n",s.name);
	   printf("rollno:%d\n",s.rollno);
	   printf("marks:%d\n",s.marks);
	   return 0;
}

